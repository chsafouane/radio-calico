# Production Environment Configuration for RadioCalico
# Copy this file to .env and update values for your production environment

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=radiocalico
POSTGRES_USER=radiocalico_user
POSTGRES_PASSWORD=your_secure_password_here

# Application Configuration
NODE_ENV=production
PORT=3000

# Security
# Generate a strong password for PostgreSQL in production
# Use a tool like: openssl rand -base64 32

# Optional: External Database Configuration
# If using managed PostgreSQL service (e.g., AWS RDS, Google Cloud SQL)
# POSTGRES_HOST=your-rds-endpoint.amazonaws.com
# POSTGRES_PORT=5432
# POSTGRES_DB=radiocalico
# POSTGRES_USER=radiocalico_user
# POSTGRES_PASSWORD=your_managed_db_password

# SSL Configuration (if using managed database with SSL)
# POSTGRES_SSL=true
# POSTGRES_SSL_REJECT_UNAUTHORIZED=true

# Optional: Connection Pool Configuration
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_IDLE_TIMEOUT=30000
# POSTGRES_CONNECTION_TIMEOUT=2000

# Logging
# LOG_LEVEL=info
# LOG_FORMAT=json